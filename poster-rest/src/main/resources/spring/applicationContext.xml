<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans	
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	 
		http://www.springframework.org/schema/tx 
		http://www.springframework.org/schema/tx/spring-tx.xsd
		 
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd">

	<bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor" />
	
	<context:component-scan base-package="org.pti.poster.rest" />
	<context:component-scan base-package="org.pti.poster.dao" />

	<bean id="postService" class="org.pti.poster.rest.PostService" />
	<bean id="postDAO" class="org.pti.poster.dao.PostDaoImpl" />

</beans>